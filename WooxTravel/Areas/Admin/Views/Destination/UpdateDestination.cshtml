@model WooxTravel.Entities.Destination
@{
    ViewBag.Title = "UpdateDestination";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/Index.cshtml";
}

<h2>Update Destination</h2>

<div class="container">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Destination Güncelleme</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x=>x.DestinationId)
                            <label>Country</label>
                            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                            <br />
                            <label>City</label>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                            <br />
                            <label>Title</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Day Night</label>
                            @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control" })
                            <br />

                            <label>URL</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Price</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <br />
                            <label>Description</label>
                            @Html.TextAreaFor(x => x.Description, 5, 0, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-primary">Update Destination</button>
                        </form>


                    </div>
                </div>

            </div>

        </div>
    </div>
</div>