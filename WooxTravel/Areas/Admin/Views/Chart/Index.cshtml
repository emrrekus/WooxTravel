
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/Index.cshtml";


}





<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <div class="container">
        <div class="page-inner">
            <div class="row">
                <!-- Pie Chart -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tur Kapasiteleri (Pie)</div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="pieChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bar Chart -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tur Kapasiteleri (Bar)</div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="barChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Chart -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tur Kapasiteleri (Line)</div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="lineChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Doughnut Chart -->
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Tur Kapasiteleri (Doughnut)</div>
                        </div>
                        <div class="card-body">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="doughnutChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
    </div>

    <script>
        // Ortak değişkenler
        const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DestinationTitles));
        const data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.DestinationCapacities));
        const colors = [
            "#FF6384",
            "#36A2EB",
            "#FFCE56",
            "#4BC0C0",
            "#9966FF",
            "#FF9F40"
        ];

        // Pie Chart
        new Chart(document.getElementById("pieChart").getContext("2d"), {
            type: "pie",
            data: {
                labels: labels,
                datasets: [{
                    label: "Kapasiteler",
                    data: data,
                    backgroundColor: colors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "top",
                    },
                    title: {
                        display: true,
                        text: "Tur Kapasiteleri"
                    }
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });

        // Bar Chart
        new Chart(document.getElementById("barChart").getContext("2d"), {
            type: "bar",
            data: {
                labels: labels,
                datasets: [{
                    label: "Kapasiteler",
                    data: data,
                    backgroundColor: colors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "top",
                    },
                    title: {
                        display: true,
                        text: "Tur Kapasiteleri"
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Line Chart
        new Chart(document.getElementById("lineChart").getContext("2d"), {
            type: "line",
            data: {
                labels: labels,
                datasets: [{
                    label: "Kapasiteler",
                    data: data,
                    borderColor: "#36A2EB",
                    backgroundColor: "rgba(54, 162, 235, 0.1)",
                    borderWidth: 2,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "top",
                    },
                    title: {
                        display: true,
                        text: "Tur Kapasiteleri"
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Doughnut Chart
        new Chart(document.getElementById("doughnutChart").getContext("2d"), {
            type: "doughnut",
            data: {
                labels: labels,
                datasets: [{
                    label: "Kapasiteler",
                    data: data,
                    backgroundColor: colors,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: "top",
                    },
                    title: {
                        display: true,
                        text: "Tur Kapasiteleri"
                    }
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                },
                cutout: '70%'
            }
        });
    </script>


